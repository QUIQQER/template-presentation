<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <bricks>

        <!-- for all bricks -->
        <brick control="*">
            <settings>
                <setting name="brickFullWidth" type="checkbox">
                    <locale group="quiqqer/template-presentation"
                            var="brick.settings.enableBgImage.fullWidth"/>
                </setting>

                <setting name="verticalSpacingTop" type="select">
                    <locale group="quiqqer/template-presentation"
                            var="settings.verticalSpacingTop"/>

                    <option value=""></option>
                    <option value="disabled">
                        <locale group="quiqqer/template-presentation"
                                var="settings.verticalSpacing.disabled"/>
                    </option>
                    <option value="small">
                        <locale group="quiqqer/template-presentation"
                                var="settings.verticalSpacing.small"/>
                    </option>
                    <option value="base" selected="selected">
                        <locale group="quiqqer/template-presentation"
                                var="settings.verticalSpacing.base"/>
                    </option>
                    <option value="medium">
                        <locale group="quiqqer/template-presentation"
                                var="settings.verticalSpacing.medium"/>
                    </option>
                    <option value="large">
                        <locale group="quiqqer/template-presentation"
                                var="settings.verticalSpacing.large"/>
                    </option>
                    <option value="extraLarge">
                        <locale group="quiqqer/template-presentation"
                                var="settings.verticalSpacing.extraLarge"/>
                    </option>
                </setting>
                <setting name="verticalSpacingBottom" type="select">
                    <locale group="quiqqer/template-presentation"
                            var="settings.verticalSpacingBottom"/>

                    <option value=""></option>
                    <option value="disabled">
                        <locale group="quiqqer/template-presentation"
                                var="settings.verticalSpacing.disabled"/>
                    </option>
                    <option value="small">
                        <locale group="quiqqer/template-presentation"
                                var="settings.verticalSpacing.small"/>
                    </option>
                    <option value="base" selected="selected">
                        <locale group="quiqqer/template-presentation"
                                var="settings.verticalSpacing.base"/>
                    </option>
                    <option value="medium">
                        <locale group="quiqqer/template-presentation"
                                var="settings.verticalSpacing.medium"/>
                    </option>
                    <option value="large">
                        <locale group="quiqqer/template-presentation"
                                var="settings.verticalSpacing.large"/>
                    </option>
                    <option value="extraLarge">
                        <locale group="quiqqer/template-presentation"
                                var="settings.verticalSpacing.extraLarge"/>
                    </option>
                </setting>

                <setting name="brickBgImage" class="media-image">
                    <locale group="quiqqer/template-presentation"
                            var="brick.settings.bgImage"/>
                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.bgImage.desc"/>
                    </description>
                </setting>
                <setting name="enableBrickBgColor" type="select">
                    <locale group="quiqqer/template-presentation"
                            var="brick.settings.enableBgColor"/>

                    <option value="disable" selected="selected">
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.enableSelect.disable"/>
                    </option>
                    <option value="enable.useBrickSetting">
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.enableSelect.enable.useBrickSetting"/>
                    </option>
                    <option value="enable.useTemplateSetting">
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.enableSelect.enable.useTemplateSetting"/>
                    </option>
                </setting>
                <setting name="brickBgColor" type="color">
                    <locale group="quiqqer/template-presentation"
                            var="brick.settings.bgColor"/>
                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.bgColor.desc"/>
                    </description>
                </setting>
                <setting name="enableBrickTextColor" type="select">
                    <locale group="quiqqer/template-presentation"
                            var="brick.settings.enableTextColor"/>

                    <option value="disable" selected="selected">
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.enableSelect.disable"/>
                    </option>
                    <option value="enable.useBrickSetting">
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.enableSelect.enable.useBrickSetting"/>
                    </option>
                    <option value="enable.useTemplateSetting">
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.enableSelect.enable.useTemplateSetting"/>
                    </option>
                </setting>
                <setting name="brickTextColor" type="color">
                    <locale group="quiqqer/template-presentation"
                            var="brick.settings.textColor"/>
                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.textColor.desc"/>
                    </description>
                </setting>
                <!-- BRICK SETTINGS: separator top -->
                <setting name="brickSeparatorTop.enable" type="checkbox"
                         data-qui="package/quiqqer/template-presentation/bin/Controls/backend/SettingDependency"
                >
                    <locale group="quiqqer/template-presentation"
                            var="brick.settings.separatorTop.enable"/>
                </setting>
                <setting name="brickSeparatorTop.image" class="media-image" data-dependency="templatePresentation-brickSeparatorTop.enable">
                    <locale group="quiqqer/template-presentation"
                            var="brick.settings.separatorTop.image"/>
                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.separatorTop.image.desc"/>
                    </description>
                </setting>
                <setting name="brickSeparatorTop.width" type="text" data-dependency="templatePresentation-brickSeparatorTop.enable">
                    <locale group="quiqqer/template-presentation"
                            var="brick.settings.separatorTop.width"/>
                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.separatorTop.width.desc"/>
                    </description>
                </setting>
                <setting name="brickSeparatorTop.height" type="text" data-dependency="templatePresentation-brickSeparatorTop.enable">
                    <locale group="quiqqer/template-presentation"
                            var="brick.settings.separatorTop.height"/>
                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.separatorTop.height.desc"/>
                    </description>
                </setting>
                <!-- BRICK SETTINGS: separator bottom -->
                <setting name="brickSeparatorBottom.enable" type="checkbox"
                         data-qui="package/quiqqer/template-presentation/bin/Controls/backend/SettingDependency"
                >
                    <locale group="quiqqer/template-presentation"
                            var="brick.settings.separatorBottom.enable"/>
                </setting>
                <setting name="brickSeparatorBottom.image" class="media-image" data-dependency="templatePresentation-brickSeparatorBottom.enable">
                    <locale group="quiqqer/template-presentation"
                            var="brick.settings.separatorBottom.image"/>
                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.separatorBottom.image.desc"/>
                    </description>
                </setting>
                <setting name="brickSeparatorBottom.width" type="text" data-dependency="templatePresentation-brickSeparatorBottom.enable">
                    <locale group="quiqqer/template-presentation"
                            var="brick.settings.separatorBottom.width"/>
                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.separatorBottom.width.desc"/>
                    </description>
                </setting>
                <setting name="brickSeparatorBottom.height" type="text" data-dependency="templatePresentation-brickSeparatorBottom.enable">
                    <locale group="quiqqer/template-presentation"
                            var="brick.settings.separatorBottom.height"/>
                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="brick.settings.separatorBottom.height.desc"/>
                    </description>
                </setting>
            </settings>
        </brick>

        <!-- promo slider wallpaper 2 content -->
        <brick control="\QUI\Bricks\Controls\Slider\PromosliderWallpaper2Content">
            <settings>
                <setting name="promosliderBackground" type="color">
                    <locale group="quiqqer/template-presentation"
                            var="promosliderBackground"/>
                </setting>
            </settings>
        </brick>

        <!-- defined areas in the template -->
        <templateAreas>
            <!-- global areas -->

            <areas>
                <area name="headerSuffix" inheritance="1" priority="10">
                    <title>
                        <locale group="quiqqer/template-presentation"
                                var="area.headerSuffix.title"
                                />
                    </title>
                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="area.headerSuffix.description"
                                />
                    </description>
                </area>

                <area name="footerPrefix" inheritance="1" priority="90">
                    <title>
                        <locale group="quiqqer/template-presentation"
                                var="area.footerPrefix.title"
                                />
                    </title>
                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="area.footerPrefix.description"
                                />
                    </description>
                </area>

                <area name="footer" inheritance="1" priority="100">
                    <title>
                        <locale group="quiqqer/template-presentation"
                                var="area.footer.title"
                                />
                    </title>
                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="area.footer.description"
                                />
                    </description>
                </area>
            </areas>

            <!-- specific type areas -->
            <layouts>

                <layout layout="layout/startPage">
                    <area name="header" inheritance="1" priority="5">
                        <title>
                            <locale group="quiqqer/template-presentation"
                                    var="area.header.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-presentation"
                                    var="area.header.description"
                            />
                        </description>
                    </area>

                    <area name="prefixContentBricks" inheritance="1" priority="20">
                        <title>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.prefix.content.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.prefix.content.description"
                                    />
                        </description>
                    </area>

                    <area name="suffixContentBricks" inheritance="1" priority="30">
                        <title>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.suffix.content.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.suffix.content.description"
                                    />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/noSidebar">
                    <area name="prefixContentBricks" inheritance="1" priority="20">
                        <title>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.prefix.content.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.prefix.content.description"
                                    />
                        </description>
                    </area>

                    <area name="suffixContentBricks" inheritance="1" priority="30">
                        <title>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.suffix.content.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.suffix.content.description"
                                    />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/noSidebarSmall">
                    <area name="prefixContentBricks" inheritance="1" priority="20">
                        <title>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.prefix.content.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.prefix.content.description"
                            />
                        </description>
                    </area>

                    <area name="suffixContentBricks" inheritance="1" priority="30">
                        <title>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.suffix.content.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.suffix.content.description"
                            />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/leftSidebar">
                    <area name="prefixContentBricks" inheritance="1" priority="20">
                        <title>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.prefix.content.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.prefix.content.description"
                                    />
                        </description>
                    </area>

                    <area name="suffixContentBricks" inheritance="1" priority="30">
                        <title>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.suffix.content.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.suffix.content.description"
                                    />
                        </description>
                    </area>

                    <area name="leftSidebar" inheritance="1" priority="40">
                        <title>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.left.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.left.description"
                            />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/rightSidebar">
                    <area name="prefixContentBricks" inheritance="1" priority="20">
                        <title>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.prefix.content.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.prefix.content.description"
                                    />
                        </description>
                    </area>

                    <area name="suffixContentBricks" inheritance="1" priority="30">
                        <title>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.suffix.content.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.suffix.content.description"
                                    />
                        </description>
                    </area>

                    <area name="rightSidebar" inheritance="1" priority="40">
                        <title>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.right.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-presentation"
                                    var="area.sidebar.right.description"
                            />
                        </description>
                    </area>
                </layout>
            </layouts>
        </templateAreas>
    </bricks>

</quiqqer>
