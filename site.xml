<?xml version="1.0" encoding="UTF-8"?>
<site>
    <!-- global attributes -->
    <attributes>
        <attribute>templatePresentation.showHeader</attribute>
        <attribute>templatePresentation.showTitle</attribute>
        <attribute>templatePresentation.showShort</attribute>
        <attribute>templatePresentation.altTitle</attribute>
        <attribute>templatePresentation.altShort</attribute>
    </attributes>

    <settings>
        <category name="templatePresentation.siteSettings">
            <settings>
                <title>
                    <locale group="quiqqer/template-presentation"
                            var="templatePresentation.siteSettings"/>
                </title>

                <!-- show header -->
                <select conf="templatePresentation.showHeader">
                    <text>
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showHeader"/>
                    </text>
                    <option value="default">
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showHeader.default"/>
                    </option>
                    <option value="show">
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showHeader.show"/>
                    </option>
                    <option value="hide">
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showHeader.hide"/>
                    </option>
                </select>

                <input conf="templatePresentation.showTitle" type="checkbox">
                    <text>
                        <locale group="quiqqer/template-presentation" var="siteSettings.showTitle"/>
                    </text>
                </input>
                <input conf="templatePresentation.showShort" type="checkbox">
                    <text>
                        <locale group="quiqqer/template-presentation" var="siteSettings.showShort"/>
                    </text>
                </input>
                <input conf="templatePresentation.altTitle" type="text">
                    <text>
                        <locale group="quiqqer/template-presentation" var="siteSettings.altTitle"/>
                    </text>
                </input>
                <input conf="templatePresentation.altShort" type="textarea">
                    <text>
                        <locale group="quiqqer/template-presentation" var="siteSettings.altShort"/>
                    </text>
                </input>
            </settings>
        </category>
    </settings>


    <!-- layouts -->
    <layouts>
        <layout type="layout/startPage">
            <title>
                <locale group="quiqqer/template-presentation" var="admin.layout.startpage"/>
            </title>
            <description>
                <locale group="quiqqer/template-presentation" var="admin.layout.startpage.desc"/>
            </description>
        </layout>

        <layout type="layout/noSidebar">
            <title>
                <locale group="quiqqer/template-presentation" var="admin.layout.noSidebar"/>
            </title>
            <description>
                <locale group="quiqqer/template-presentation" var="admin.layout.noSidebar.desc"/>
            </description>
        </layout>

        <layout type="layout/leftSidebar">
            <title>
                <locale group="quiqqer/template-presentation" var="admin.layout.leftSidebar"/>
            </title>
            <description>
                <locale group="quiqqer/template-presentation" var="admin.layout.leftSidebar.desc"/>
            </description>
        </layout>

        <layout type="layout/rightSidebar">
            <title>
                <locale group="quiqqer/template-presentation" var="admin.layout.rightSidebar"/>
            </title>
            <description>
                <locale group="quiqqer/template-presentation" var="admin.layout.rightSidebar.desc"/>
            </description>
        </layout>
    </layouts>

</site>
