<?xml version="1.0" encoding="UTF-8"?>
<site>
    <!-- global attributes -->
    <attributes>
        <attribute>templatePresentation.showHeader</attribute>
        <attribute>templatePresentation.showTitle</attribute>
        <attribute>templatePresentation.showShort</attribute>
        <attribute>templatePresentation.header.textColor.enable</attribute>
        <attribute>templatePresentation.header.textColor.color</attribute>
        <attribute>templatePresentation.header.textPos</attribute>
        <attribute>templatePresentation.pageCustomClass</attribute>
        <attribute>templatePresentation.independentMenuId</attribute>
    </attributes>

    <settings>
        <category name="templatePresentation.siteSettings">
            <settings>
                <title>
                    <locale group="quiqqer/template-presentation"
                            var="templatePresentation.siteSettings"/>
                </title>

                <!-- show header -->
                <select conf="templatePresentation.showHeader">
                    <text>
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showHeader"/>
                    </text>
                    <option value="default">
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showHeader.default"/>
                    </option>
                    <option value="show">
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showHeader.show"/>
                    </option>
                    <option value="hide">
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showHeader.hide"/>
                    </option>
                </select>

                <!-- show title -->
                <select conf="templatePresentation.showTitle">
                    <text>
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showTitle"/>
                    </text>
                    <option value="default">
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showTitle.default"/>
                    </option>
                    <option value="show">
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showTitle.show"/>
                    </option>
                    <option value="hide">
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showTitle.hide"/>
                    </option>
                </select>

                <!-- show short description -->
                <select conf="templatePresentation.showShort">
                    <text>
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showShort"/>
                    </text>
                    <option value="default">
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showShort.default"/>
                    </option>
                    <option value="show">
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showShort.show"/>
                    </option>
                    <option value="hide">
                        <locale group="quiqqer/template-presentation"
                                var="templatePresentation.siteSettings.showShort.hide"/>
                    </option>
                </select>

                <!-- header text color -->
                <select conf="templatePresentation.header.textColor.enable">
                    <text>
                        <locale group="quiqqer/template-presentation"
                                var="site.settings.header.textColor.enable"/>
                    </text>

                    <option></option>
                    <option value="useTemplateSetting">
                        <locale group="quiqqer/template-presentation"
                                var="site.settings.header.textColor.enable.useTemplateSetting"/>
                    </option>
                    <option value="useSiteSetting">
                        <locale group="quiqqer/template-presentation"
                                var="site.settings.header.textColor.enable.useSiteSetting"/>
                    </option>
                    <option value="useDefaultColor">
                        <locale group="quiqqer/template-presentation"
                                var="site.settings.header.textColor.enable.useDefaultColor"/>
                    </option>
                </select>
                <input conf="templatePresentation.header.textColor.color" type="color">
                    <text>
                        <locale group="quiqqer/template-presentation"
                                var="site.settings.header.textColor.color"/>
                    </text>
                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="site.settings.header.textColor.color.desc"/>
                    </description>
                </input>

                <!-- custom css class for entire page -->
                <input conf="templatePresentation.pageCustomClass" type="text">
                    <text>
                        <locale group="quiqqer/template-presentation"
                                var="siteSettings.pageCustomClass"/>
                    </text>
                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="siteSettings.pageCustomClass.desc"/>
                    </description>
                </input>

                <!-- Independent mnenu / own menu -->
                <input conf="templatePresentation.independentMenuId"
                       type="text"
                       data-qui="package/quiqqer/menu/bin/Controls/Independent/Input">
                    <text>
                        <locale group="quiqqer/template-presentation"
                                var="siteSettings.independentMenuId"
                        />
                    </text>

                    <description>
                        <locale group="quiqqer/template-presentation"
                                var="siteSettings.independentMenuId.desc"
                        />
                    </description>
                </input>

            </settings>
        </category>
    </settings>


    <!-- layouts -->
    <layouts>
        <layout type="layout/startPage"
                image="bin/layouts/startPage.png">
            <title>
                <locale group="quiqqer/template-presentation" var="admin.layout.startpage"/>
            </title>
            <description>
                <locale group="quiqqer/template-presentation" var="admin.layout.startpage.desc"/>
            </description>
        </layout>

        <layout type="layout/noSidebar"
                image="bin/layouts/noSidebar.png">
            <title>
                <locale group="quiqqer/template-presentation" var="admin.layout.noSidebar"/>
            </title>
            <description>
                <locale group="quiqqer/template-presentation" var="admin.layout.noSidebar.desc"/>
            </description>
        </layout>

        <layout type="layout/noSidebarSmall"
                image="bin/layouts/noSidebar.png">
            <title>
                <locale group="quiqqer/template-presentation" var="admin.layout.noSidebarSmall"/>
            </title>
            <description>
                <locale group="quiqqer/template-presentation" var="admin.layout.noSidebarSmall.desc"/>
            </description>
        </layout>

        <layout type="layout/leftSidebar"
                image="bin/layouts/leftSidebar.png">
            <title>
                <locale group="quiqqer/template-presentation" var="admin.layout.leftSidebar"/>
            </title>
            <description>
                <locale group="quiqqer/template-presentation" var="admin.layout.leftSidebar.desc"/>
            </description>
        </layout>

        <layout type="layout/rightSidebar"
                image="bin/layouts/rightSidebar.png">
            <title>
                <locale group="quiqqer/template-presentation" var="admin.layout.rightSidebar"/>
            </title>
            <description>
                <locale group="quiqqer/template-presentation" var="admin.layout.rightSidebar.desc"/>
            </description>
        </layout>
    </layouts>

</site>
